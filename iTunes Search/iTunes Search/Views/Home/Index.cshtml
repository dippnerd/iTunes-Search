@model iTunes_Search.Models.SearchModel

@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-md-4">
        <h3>Search iTunes</h3>
        @using (Html.BeginForm("Search", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.TextBoxFor(model => model.query, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.query)
            </div>
            <div class="form-group">
                @Html.DropDownList("media", (IEnumerable<SelectListItem>)ViewData["media"], htmlAttributes: new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-default">Search</button>
        }
    </div>
</div>